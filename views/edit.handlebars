<section>
  <div class="container">

    <!--  Title  -->
    <h2>請編輯支出明細</h2>
    <form action="/list/new" method="POST">

      <!--  Name  -->
      <div class="group">
        <label>名稱 : </label>
        <input type="text" name="name" placeholder="breakfast..." value="{{  list.name  }}" required>
      </div>

      <!--  Date  -->
      <div class="group">
        <label>日期 : </label>
        <input type="date" name="date" value="{{  list.date  }}" required>
      </div>

      <!--  Category  -->
      <div class="group">
        <label>種類 : </label>
        <select name="category" value="{{  list.category  }}" required>
          <option value="home">住宿</option>
          <option value="traffic">交通</option>
          <option value="entertainment">娛樂</option>
          <option value="food">飲食</option>
          <option value="other">其他</option>
        </select>
      </div>

      <!--  Amount  -->
      <div class="group">
        <label>金額 : </label>
        <input type="number" name="amount" placeholder="300" value="{{  list.amount  }}" required>
      </div>

      <!--  Submit  -->
      <input type="submit" value="確認更改" class="btn">
    </form>

    <!--  Back  -->
    <a href="/">退回</a>

  </div>
</section>
