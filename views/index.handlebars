<section class="list">

  <!--  Amount Total  -->
  <div class="total">NT ${{  totalAmount  }}</div>

  <!--  Add New List  -->
  <a href="/list/new" class="new">+</a>

  <!--  Category Filter  -->
  <form action="/list/filter" method="GET">
    <select name="filter">
      <option value="all">全部</option>
      <option value="home" {{#if (same filter 'home' )}} selected {{/if}}>住宿</option>
      <option value="traffic" {{#if (same filter 'traffic' )}} selected {{/if}}>交通</option>
      <option value="entertainment" {{#if (same filter 'entertainment' )}} selected {{/if}}>娛樂</option>
      <option value="food" {{#if (same filter 'food' )}} selected {{/if}}>飲食</option>
      <option value="other" {{#if (same filter 'other' )}} selected {{/if}}>其他</option>
    </select>
    <input type="submit" value="送出">
  </form>

  <div class="container">

    <!--  Render Record List  -->
    {{#each record}}
    <div class="group">

      <!--  Category  -->
      <div class="category"><i class="{{  this.categoryIcon  }}"></i></div>

      <!--  Name  -->
      <div class="name">{{  this.name  }}</div>

      <!--  Date  -->
      <div class="date">{{  this.date  }}</div>

      <!--  Amount  -->
      <div class="amount">${{  this.amount  }}</div>

      <!--  Edit and Delete Button  -->
      <div class="btn">
        <a href="/list/{{  this._id  }}/edit"><i class="fas fa-edit"></i></a>
        <form action="/list/{{  this._id  }}/delete" method="POST" class="delete">
          <button id="delete"><i class="fas fa-trash-alt"></i></button>
        </form>
      </div>
      
    </div>
    {{/each}}

  </div>
</section>
